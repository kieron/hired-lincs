@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using System.Web.Mvc.Html
@using Umbraco.Web
@using Umbraco.Web.Models
@using Umbraco.Web.Controllers

@{
	Layout = null;
    var loginStatusModel = Members.GetCurrentLoginStatus();
    var logoutModel = new PostRedirectModel();
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.1/assets/img/favicons/favicon.ico">
    <title>Hired Lincs</title>
    <link rel="stylesheet" href="~/assets/css/bs.min.css" />
    <link rel="stylesheet" href="~/assets/css/custom.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">
</head>

<body>
    <nav class="p-0 navbar navbar-expand-md navbar-dark bg-info fixed-top">
      <a class="px-3 navbar-brand mr-0" href="/">Hired Lincs</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <input class="form-control form-control-dark w-100 h-100 navSearch" type="text" placeholder="Search Jobs" aria-label="Search" />
      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
          <ul class="navbar-nav mr-auto w-100">
              <li class="nav-item ml-auto d-flex">
                  @if (loginStatusModel.IsLoggedIn)
                  {
                      using (Html.BeginUmbracoForm<UmbLoginStatusController>("HandleLogout"))
                      {
                          <fieldset>
                              <button class="btn btn-primary">Logout</button>
                          </fieldset>
                          @Html.HiddenFor(m => logoutModel.RedirectUrl)
                      }
                  }
                  else
                  {
                      <a class="d-inline-block nav-link px-3" href="/register">Register</a>
                      <a class="d-inline-block nav-link px-3" href="/login">Login</a>
                  }
              </li>
          </ul>
      </div>
    </nav>

    <main role="main" class="container mt-5 py-5">
        @RenderBody()
    </main>    
    <script src="~/assets/js/bs.native.min.js"></script>
    @RenderSection("scripts", required: false)
  </body>
</html>



