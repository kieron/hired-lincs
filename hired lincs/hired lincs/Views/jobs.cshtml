@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Examine
@{
    Layout = "master.cshtml";
    var searchTerm = string.Empty;
    searchTerm = string.IsNullOrEmpty(Request["q"]) ? string.Empty : Request["q"];
}

<div>
    @if (searchTerm == string.Empty)
    {
        <p>Enter search term</p>
    }
    else
    {
        if (ExamineManager.Instance.TryGetIndex("ExternalIndex", out var index))
        {
            var searcher = index.GetSearcher();
            var results = searcher.CreateQuery("content").NodeTypeAlias("job").And().Field("nodeName", searchTerm).Execute();
            if (results.Any())
            {
                <ul>
                    @foreach (var result in results)
                    {
                        if (result.Id != null)
                        {
                            var node = Umbraco.Content(result.Id);
                            <li>
                                <a href="@node.Url">@node.Name</a>
                            </li>
                        }
                    }
                </ul>
            }
            else
            {
                <p>No results found for query @searchTerm</p>
            }
        }
        return;
    }  
</div>